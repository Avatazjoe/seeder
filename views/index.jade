extends layout

block content

	nav#menu(class='panel')
		ul
			li
				p item 1
			li
				p item 2
			li
				p item 3
			li
				p item 4

	#contain_main(class='push')
		#navbar(class='push')
			a(class='menu-link' href='#menu') &#9776
			p(class='nav_title') seeder
			
		#pallete

			#display_code_pallete
				ul
					li#btn_show_text
						a(href='#text_tab') text view
					li#btn_show_graph
						a(href='#graph_tab') graph view

			#tabs
				ul
					li
						a(href='#tabs-1') add an edge
					li
						a(href='#tabs-2') add a node
					li
						a(href='#tabs-3') edit a node
				br

				#tabs-1
					p add edge
					form
						input#btn_addedge(type='button' value='add edge')
					#add_edge_msg
						p click the button to add an edge
				#tabs-2
					add node information
					form#form_addnode
						input#field_node_xpos(type='number' name='node_xpos' class='input_node_add' placeholder='node x position')
						input#field_node_ypos(type='number' name='node_ypos' placeholder='node y position')
						input#field_node_size(type='number' name='node_size' placeholder='node size')
						input#field_node_id(type='text' name='node_id' placeholder='node id')
						input#field_node_name(type='text' name='node_name' placeholder='node name')
						br
						input#picker_edgecolor(type='color' placeholder='#ffffff')
						br
						input#btn_addnode(type='button' value='add node')
				#tabs-3
					p edit node

		#display_code

			#text_tab

			#graph_tab
				#graph_canvas
				