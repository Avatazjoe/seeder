extends layout

block content
	.ui.menu.purple.inverted
		ai#sidebar-toggle.item
			i.reorder.icon
		a.item(href="/")
			i.leaf.icon
			img(src="/img/logo-small.png")
		a.item(href="/explore")
			i.map.icon
			| Explore
		a.item.purple.active(href="/build")
			i.wrench.icon
			| Build
		.ui.simple.dropdown.item
			|More
			i.dropdown.icon
			.menu
				a.item(href="/blog")
					i.book.icon
					|Blog
				a.itema.item(href="/help")
					i.help.icon
					|Help
		.right.compact.menu
			.ui.simple.dropdown.item
				i.user.icon
				| #{username}
				i.dropdown.icon
				.menu
					a.item
						i.bolt.icon
						|My Profile
					a.item
						i.lightbulb.icon
						|My Graphs
					a.item
						i.settings.icon
						|Settings
					a.item(href="/auth/google")
						i.sign.in.icon
						|Sign In
						
			.item
				.ui.icon.input
					input(type="text" placeholder="search the graph...")
					i.search.link.icon
	#explore-sidebar.ui.floating.sidebar
		.ui.fluid.vertical.menu
			.header.item
				|Reference Details
				i.purple.book.icon
			.item
				img#node-image.rounded.ui.small.left.floated.image(src='http://placehold.it/100x100.png')
				#info-header.smalltext
					p#node-title
					p#node-domain
				#clear
				#info-body.smalltext
					p#node-description
					a#node-link.ui.purple.label(target="_blank")
						|read full article
			.header.item
				|Graph Tools
				i.purple.edit.icon
			#frm_searcharticles.item
				.ui.icon.input
					input#input_searcharticles(type='text' placeholder="enter a topic")
					i#btn_searcharticles.search.link.icon
				#search_results_holder
			.item
				.ui.buttons
					#btn_savegraph.ui.button.small
						|Save
					.or
					#btn_publishgraph.ui.button.small.positive
						|Publish
			#savepanel
				.ui.label#updatelabel
					|Last Updated
					.detail#lastsave
						| Never
				ul
					li
						.ui.labeled.input
							input#sp_graphname.text(placeholder="Graph Name")
							.ui.corner.label
								i.asterisk.icon
					li
						.ui.labeled.input
							input#sp_graphdesc.text(placeholder="Graph Name")
							.ui.corner.label
								i.asterisk.icon
	#contain_main(class='push')
		#pallete
			#pallete-menu.ui.vertical.pointing.menu
				a.item.active.purple.edittab(tablink='#tabs-1')
					| Add Edge 
					i.fork.code.icon
				a.item.edittab(tablink='#tabs-2')
					| Add Node
					i.add.icon
				a.item.edittab(tablink='#tabs-3' id='editnode_tab_button')
					| Edit Node
					i.edit.icon
				a.item.edittab(tablink='#tabs-4')
					|Export
					i.indent.right.icon
			#tabs-1.tabwindow
				#edgebuilder
					#edgesource
					.ui.horizontal.icon.divider
						i.circular.long.arrow.down.icon
					#edgedestination
				form
					input.tiny.ui.submit.green.button#btn_addedge(type='button' value='add edge')
			#tabs-2.tabwindow
				form#form_addnode
					select#select_node_type
						option(value="TEXT")
							|Text Node
						option(value="LAYER")
							|Layer Node
					input#field_node_name.ui.mini.input(type='text' name='node_name' placeholder='node name')
					input#field_node_text.ui.mini.input(type='text' name='node_text' class='input_node_add' placeholder='add text')
					input#field_node_link.ui.mini.input(type='text' name='node_link' placeholder='add a link')
					input#field_node_size.ui.mini.input(type='number' name='node_size' value='20')
					br
					input#picker_edgecolor.ui.mini.input(type='color' placeholder='#ffffff')
					br
					input.tiny.ui.submit.green.button#btn_addnode(type='button' value='add node')
			#tabs-3.tabwindow
				#edit_notice
					.ui.icon.header
						i.edit.circular.icon
						.sub.header
							|Click a node
				form#form_editnode
					input#field_edit_node_name.ui.mini.input(type='text' name='node_name' placeholder='node name')
					input#field_edit_node_text.ui.mini.input(type='text' name='node_text' class='input_node_add' placeholder='add text')
					input#field_edit_node_link.ui.mini.input(type='text' name='node_link' placeholder='add a link')
					input#field_edit_node_size.ui.mini.input(type='number' name='node_size' value='20')
					br
					input#picker_edit_edgecolor.ui.mini.input(type='color' placeholder='#ffffff')
					br
					input.tiny.ui.submit.green.button#btn_editnode(type='button' value='edit node')
			#tabs-4.tabwindow
				p export
				input#btn_export(type='button' value='export')

		#display_code
			#graph_tab
				canvas#graph_canvas(width='1200px' height='600px')
				